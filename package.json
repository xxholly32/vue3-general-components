{
  "name": "vue3-general-components",
  "version": "0.0.0",
  "scripts": {
    "dev": "vitepress dev docs",
    "clean": "rimraf lib && mkdir lib",
    "build": "vitepress build docs",
    "build:all": "npm run clean && npm run build:es",
    "build:es": "rollup --config build/rollup.config.es.js",
    "release": "standard-version && npm run cz:changelog",
    "cz:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "dependencies": {
    "vue": "^3.0.0-rc.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@vue/compiler-sfc": "^3.0.0-rc.1",
    "babel-core": "^6.26.0",
    "clean-css": "^4.2.3",
    "conventional-changelog-cli": "^2.0.34",
    "cross-env": "^7.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^1.16.7",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-css-only": "^2.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-vue": "^6.0.0-beta.4",
    "sass": "^1.26.10",
    "sass-loader": "^10.0.2",
    "standard-version": "^8.0.0",
    "vitepress": "^0.5.0"
  },
  "browserslist": [
    "defaults"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
